{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "semi": [2, "never"],
    "arrow-parens": 0,
    "class-methods-use-this": 0,
    "comma-dangle": ["error", {
      "arrays": "never",
      "objects": "never",
      "imports": "never",
      "exports": "never",
      "functions": "ignore"
    }],
    "symbol-description": 0,
    "no-unused-vars": [2, { "varsIgnorePattern": "^_+$" }],
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "no-confusing-arrow": 0,
    "no-else-return": 0,
    "react/sort-comp": 0,
    "react/jsx-filename-extension": 0,
    "no-prototype-builtins": 0,
    "no-duplicate-imports": 0
  },
  "env": {
    "mocha": true,
    "browser": "true"
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  }
}
